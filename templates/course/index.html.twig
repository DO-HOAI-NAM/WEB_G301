{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid text-center">
		<h2>Course</h2>

		<table class="table table-hover">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Price</th>
				<th>Image</th>
				<th>Menu</th>
			</tr>
			{% for course in courses %}
				<tr>
					<td>{{course.id}}</td>
					<td>{{course.name}}</td>
					<td>{{course.price}}$</td>
					<td>
						<a href="{{path('course_detail', {'id' : course.id})}}"><img src="{{course.image}}" width="100" height="100"></a>

					</td>
					<td>
						<a class="btn btn-warning" href="{{ path('course_edit', {'id' : course.id }) }}">EDIT</a>
						<a class="btn btn-danger" href="{{ path('course_delete', {'id' : course.id}) }}" onclick="return confirm('Do you want to delete this book ?');">DELETE</a>
						<a class="btn btn-primary " href="{{ path('course_add')}}">ADD</a>

					</td>

				</tr>

			{% endfor %}
		</table>


	</div>
{% endblock %}
